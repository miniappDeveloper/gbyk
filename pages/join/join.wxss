/* pages/join/join.wxss */

/*背景盒模型  */

.bgjoin {
  width: 100vw;
  height: 100vh;
  position: relative;
  padding-top: 50rpx;
}

/*背景  */

.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}

/*卡片模型  */

.card {
  width: 652rpx;
  height: 1000rpx;
  background: #fff;
  border-radius: 30rpx;
  position: absolute;
  padding-top: 60rpx;
  top: 50%;
  left: 50%;
  margin-top: -500rpx;
  margin-left: -326rpx;
}

/*头图背景  */

.joinbgimg {
  width: 100%;
  height: 400rpx;
  position: absolute;
  border-radius: 30rpx;
  z-index: 0;
  top: 0;
  left: 0;
}

.content {
  width: 100%;
  display: table;
  position: relative;
}

/*二维码  */

.joinimg {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
}

/*  文字背景*/

.jointextbg {
  background-color: #ffd92e;
  display: table;
  margin: 0 auto;
  margin-top: 20rpx;
  font-size: 30rpx;
  max-width: 300rpx;
}

.jointextid {
  background-color: #ffd92e;
  display: table;
  margin: 0 auto;
  margin-top: 5rpx;
  font-size: 30rpx;
  max-width: 600rpx;
  letter-spacing: 5rpx;
}

.step {
  margin-left: 80rpx;
  margin-right: 80rpx;
}

.stepline {
  width: 200rpx;
  height: 5rpx;
  background-color: #ffd92e;
  margin: 0 auto;
  margin-top: 90rpx;
}

.stepnumber {
  display: inline-block;
  margin-top: 40rpx;
  
}

.number1 {
  font-size: 90rpx;
  color: #ffd92e;
  font-style:italic;
}

.steptext1{
font-size: 35rpx;
color: #302F2F;
padding-left: 60rpx;
}

.line1{
  width: 480rpx;
  height: 2rpx;
  background-color: #E1E1E1;
}