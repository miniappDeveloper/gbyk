/* pages/pagepublication/pagepublication.wxss */

/*导航 问题：居中问题 */

.navigation {
  text-align: center;
  border-bottom: 2rpx solid #e1e1e1;
  padding-bottom: 20rpx;
}

/*返回图片  */

.return {
  color: #ffd92e;
  font-size: 30rpx;
  float: left;
  padding-left: 40rpx;
}


/*发布消息按钮  */

.publication {
  color: #ffd92e;
  font-size: 30rpx;
  float: right;
  padding-right: 40rpx;
}

/*发布内容盒子部分  */

.heading {
  margin-top: 10rpx;
  margin-bottom: 5rpx;
}

/*题目  */

.title1 {
  font-size: 30rpx;
  color: #e1e1e1;
  padding-left: 40rpx;
  display: block;
  padding-top: 20rpx;
  padding-bottom: 15rpx;
}

.line1 {
  border-top: 2rpx solid #e1e1e1;
  width: 100%;
  height: 1rpx;
  display: block;
  margin-top: 12rpx;
}

/*底部盒子  */

.bottom {
  position: fixed;
  bottom: 10px;
  
}

/*底部分割线  */

.bottomline {
  border-top: 2rpx solid #e1e1e1;
  width: 750rpx;
  height: 1rpx;
  display: block;
}

/*拍照图标  */

.photo {
  width: 55rpx;
  height: 55rpx;
  padding-right: 40rpx;
  padding-top: 8rpx;
  float: right;
}

/*图片图标  */

.pic {
  width: 55rpx;
  height: 55rpx;
  padding-right: 20rpx;
  padding-top: 8rpx;
  float: right;
}